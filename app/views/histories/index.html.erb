<p id="notice"><%= notice %></p>

<h1>Listing Histories</h1>

<table>
  <thead>
    <tr>
      <th>Prescription</th>
      <th>Quantity</th>
      <th>Fill date</th>
      <th>Provider</th>
      <th>Npi</th>
      <th>Pharmacy</th>
      <th>Phone</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.prescription %></td>
        <td><%= history.quantity %></td>
        <td><%= history.fill_date %></td>
        <td><%= history.provider %></td>
        <td><%= history.npi %></td>
        <td><%= history.pharmacy_id %></td>
        <td><%= history.phone %></td>
        <td><%= history.patient %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

